@model WatchShop.Models.Category

@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-4" style="margin-left:30%;">
    <div class="card">
        <div class="card-body">
            <p class="card-text">
                <strong>Name:</strong>
                @Html.DisplayFor(model => model.name)
            </p>
        </div>

        <div class="container"><p class="text-danger">Are you sure you want to delete this category?</p></div>
        <br />
        <div class="two-btn">

            <input type="submit" value="Delete" class="btn btn-danger" style="margin-left:10%; border-radius:5px;" />
            <button type="button" class="btn btn-primary" style="margin-left:10%; border-radius:5px;">@Html.ActionLink("Back to List", "Index", "Category")</button>
        </div>
    </div>
</div>