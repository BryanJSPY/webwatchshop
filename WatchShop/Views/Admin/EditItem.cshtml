@model WatchShop.Models.Item

@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>EDIT ITEM</strong>
            </div>
            <div class="card-body card-block">
                @*Name*@
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = " form-control-label", @for = "text-input" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "text-input", @placeholder = "Enter Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*Price*@
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = " form-control-label", @for = "text-input" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @id = "text-input", @placeholder = "Enter Name" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*BrandID*@
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = " form-control-label", @for = "text-input" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownListFor(model => model.BrandId, (IEnumerable<SelectListItem>)ViewBag.Brand, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*CategoryID*@
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = " form-control-label", @for = "text-input" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Brand, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*Image*@
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = " form-control-label", @for = "text-input" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "text-input", @placeholder = "Enter Name" } })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="margin-left: 25%;">
                        Save
                    </button>
                    <button type="reset" class="btn btn-danger ml-3">
                        @Html.ActionLink("Back to List", "Items")
                    </button>
                </div>
            </div>
        </div>
    </div>
}





