@model IEnumerable<WatchShop.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<button type="button" class="btn btn-primary mt-1">@Html.ActionLink("Create Brand", "Create", "Brand")</button>

<div class="row mt-4">
    <div class="col-lg-12">
        <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.name)</td>
                            <td>
                                <pre style="font-size: 16px; font-family: Poppins, sans-serif; color: #808080;">@Html.ActionLink("Edit", "EditBrand", "Admin",new { id = item.id },new { id = "cc", Style = "color: #808080"}) | @Html.ActionLink("Delete", "DeleteBrand", "Admin",new { id = item.id },new {id = "cc", Style = "color: #808080"})</pre>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

